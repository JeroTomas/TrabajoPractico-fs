const fs = require('fs');

const datos = `Nombre: Juan Pérez
Edad: 22
Carrera: Medicina
`;

fs.writeFileSync('datos.txt', datos);
console.log("Archivo datos.txt creado.");

const contenido = fs.readFileSync('datos.txt', 'utf-8');
console.log("Contenido del archivo:\n", contenido);

const fechaModificacion = `\nFecha de modificación: ${new Date().toISOString().replace('T', ' ').split('.')[0]}`;
fs.appendFileSync('datos.txt', fechaModificacion);
console.log("Fecha agregada.");

fs.renameSync('datos.txt', 'informacion.txt');
console.log("Archivo renombrado a informacion.txt.");

setTimeout(() => {
  fs.unlinkSync('informacion.txt');
  console.log("Archivo eliminado después de 10 segundos.");
}, 10000);
